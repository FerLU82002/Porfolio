---
interface Props {
  Title: string;
  Description: string;
  Link?: string;
  Date: string;
}

const { Title, Date, Description, Link } = Astro.props;
---

<li class="mb-10 ms-4">
  <div
    class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
  >
  </div>
  <time class="mb-1 text-sm font-normal leading-none text-sky-200/80">
    {Date}
  </time>
  <h3 class="text-lg font-semibold text-yellow-500">{Title}</h3>
  <p class="text-base font-normal text-gray-200 mb-2 text-balance">
    {Description}
  </p>

  {
    Link && (
      <a
        href={Link}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-4 py-2 mt-2 text-sm font-medium text-white bg-gray-700 border border-gray-600 rounded-full hover:bg-gray-600 hover:border-gray-500 transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-yellow-400/50 focus:ring-offset-2 focus:ring-offset-black"
      >
        Saber m√°s
        <svg
          class="w-4 h-4 transition-transform group-hover:translate-x-1"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 14 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 5h12m0 0L9 1m4 4L9 9"
          />
        </svg>
      </a>
    )
  }
</li>
